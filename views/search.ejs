<body>
  <%- include('partials/_nav') %>
  <!-- JavaScript Bundle with Popper -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
<h1>Filter your results:</h1>
<form class="search_form" method="GET" action="/search">
  <div id="search_form">
    <section class="price_form">
      <label class="minimum_price" for="minimum_price">Enter a minimum price:</label>
      <input
        type="number"
        name="minimum_price"
        placeholder="5000"
      />
      <label class="maximum_price" for="maximum_price">Enter a maximum price:</label>
      <input
        type="number"
        name="maximum_price"
        placeholder="5000"
      />
    </section>
    <label class="brand_form" for="brand">Enter a Vehicle Brand:</label>
    <input
      type="text"
      name="brand"
      placeholder="Brand"
    />
    <label class="model_form" for="model">Enter a Vehicle Model:</label>
    <input
      type="text"
      name="model"
      placeholder="Model"
    />
    <label class="year_form" for="year">Enter a Manufacture Year:</label>
    <input
      type="number"
      name="year"
      placeholder="YYYY"
    />
    <button type="submit" class="search_button btn btn-primary">Submit</button>
  </div>
</form>
<section class="search_container">
</section>
</body>
</html>
